# Amazon Archaeological Discovery Pipeline - Environment Variables Template

# OpenAI API Key (Optional - for AI enhancement features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY= your_openai_api_key_here
OPENAI_MODEL=o3





# Processing Configuration
MAX_WORKERS=8                    # Number of parallel processing workers
MAX_MEMORY_GB=16               # Maximum memory usage for processing
TEMP_DIR=/tmp/amazon-discovery   # Temporary directory for processing

# Output Configuration
RESULTS_BASE_DIR=./results       # Base directory for results
DATA_BASE_DIR=./data            # Base directory for downloaded data
LOG_LEVEL=INFO                  # Logging level (DEBUG, INFO, WARNING, ERROR)

# Analysis Parameters
MAX_CLOUD_COVER=20              # Maximum cloud cover percentage for scenes
MIN_FEATURE_SIZE_M=50           # Minimum feature size in meters
MAX_FEATURE_SIZE_M=500          # Maximum feature size in meters
CONFIDENCE_THRESHOLD=0.6        # Minimum confidence threshold for detections





#  NASA Earthdata credentials for GEDI
EARTHDATA_USERNAME = your_earthdata_username
EARTHDATA_PASSWORD = your_earthdata_api_key_here